<odoo>
    <record id="hr_manager_group" model="res.groups">
        <field name="name">HR Mnager</field>
    </record>

    <record id="teacher_group" model="res.groups">
        <field name="name">Teacher Group</field>
    </record>

    <record id="trainee_group" model="res.groups">
        <field name="name">Trainee Group</field>
    </record>

    <!-- <record id="base.default_user_group" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('activity_one.trainee_group'))]"/>
    </record> -->




    <!-- Record Rules -->

    <!-- HR -->
    <record id="rule_hr_course" model="ir.rule">
        <field name="name">HR Course Record Rule</field>
        <field name="model_id" ref="activity_one.model_course"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('activity_one.hr_manager_group'))]"/>
    </record>



    <!-- Teacher -->
    <record id="rule_teacher_rocord_registration" model="ir.rule">
        <field name="name">Teacher Registration Record Rule</field>
        <field name="model_id" ref="activity_one.model_registration"/>
        <field name="domain_force">[('course_id.teacher_id.teacher_user_id', '=', user.id), ('state', '!=', 'draft')]</field>
        <field name="groups" eval="[(4, ref('activity_one.teacher_group'))]"/>
    </record>



    <!-- Trainee -->
    <record id="rule_trainee_registration" model="ir.rule">
        <field name="name">Trainee Registration Record Rule</field>
        <field name="model_id" ref="activity_one.model_registration"/>
        <field name="domain_force">[('trainee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('activity_one.trainee_group'))]"/>
    </record>

    
</odoo>