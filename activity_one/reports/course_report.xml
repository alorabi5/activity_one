<odoo>
    <record id="course_report" model="ir.actions.report">
        <field name="name">Course Report</field>
        <field name="model">registration</field>
        <field name="report_type">qweb-pdf</field>
        <field name="binding_model_id" ref="model_registration"/>
        <field name="binding_type">report</field>
        <field name="report_name">activity_one.course_report_template</field>
    </record>
    
    <template id="head_edit_date" inherit_id="web.external_layout_boxed">
        <xpath expr="//div[@name='company_address']" position="replace">
            <t t-out="datetime.date.today().strftime('%d %b %Y')"/>
        </xpath>
    </template>

    <template id="course_report_template" inherit_id="web.external_layout" name="course_template">

        <t t-call="web.html_container">
            <t t-call="web.external_layout">
            
                <t t-foreach="docs" t-as="rec">
                    <style>
                        
                        .info-table{
                            border: none !important;
                        }
                        .info-table th, .info-table td {
                            padding: 12px !important;
                            vertical-align: middle;
                        }
                        .info-table th {
                            background-color: #f2f2f2 !important;
                            font-weight: bold;
                        }
                    </style>

                    <div class="page">
                        <h2 class="text-info text-center">Internal Training Details</h2>
                        

                        <div class="row">
                            <div class="col-6">
                                <span class="fw-bold pe-2">Trainee Name:</span>
                                <span><t t-esc="rec.trainee_id.name"/></span>
                            </div>
                            <div class="col-6">
                                <span class="fw-bold pe-2">Job Position:</span>
                                <span><t t-esc="rec.trainee_id.job_title"/></span>
                            </div> 
                        </div>

                        <table class="table info-table table-bordered mt-5">
                            <tr>
                                <th>Serial Number</th>
                                <td colspan="3"><t t-esc="rec.course_id.serial_number"/></td>
                            </tr>
                            <tr>
                                <th>Course Name</th>
                                <td colspan="3"><t t-esc="rec.course_id.name"/></td>

                            </tr>
                            <tr>
                                <th class="table-active">Course Description</th>
                                <td colspan="3"><t t-esc="rec.course_id.descrption"/></td>
                            </tr>
                            <tr>
                                <th>Teacher Name</th>
                                <td><t t-esc="rec.course_id.teacher_id.name"/></td>
                                <th>Time</th>
                                <td><t t-esc="rec.course_id.time" t-options='{"widget": "datetime", "format": "hh:mm"}'/></td>
                            </tr>
                            <tr>
                                <th>Start Date</th>
                                <td><t t-esc="rec.course_id.start_date" t-options='{"widget": "date", "format": "dd MMM yyyy"}'/></td>
                                <th>End Date</th>
                                <td><t t-esc="rec.course_id.end_date" t-options='{"widget": "date", "format": "dd MMM yyyy"}'/></td>
                            </tr>
                            <tr>
                                <th>Room Numbe</th>
                                <td><t t-esc="rec.course_id.sudo().room_id.name"/></td>
                                <th>Course Location</th>
                                <td><t t-esc="rec.course_id.sudo().location_id.name"/></td>
                                
                            </tr>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>